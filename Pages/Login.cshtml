@page
@model TaskTracker.Pages.LoginModel
@{
	Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body class="">

    <div class="flex w-full min-h-screen items-center justify-center bg-blue-950">
        <div class="flex w-96 h-80 text-2xl text-center justify-center items-center bg-blue-800 rounded-2xl opacity-70 backdrop-blur-2xl shadow-md shadow-black">
            <form method="post">
                <p class="font-bold">Username</p>
                <input asp-for="Username" type="text" class="w-72 h-9 my-5 p-2 bg-blue-600 rounded-md text-center text-lg outline-0 focus:shadow-md" />
                <p class="font-bold">Password</p>
                <input asp-for="Password" type="password" class="w-72 h-9 my-5 p-2 bg-blue-600 rounded-md text-center text-lg outline-0 focus:shadow-md" />
                <br />
                <input type="submit" value="Login" class="cursor-pointer w-[40%] h-8 text-lg bg-blue-600 rounded-3xl hover:text-white" />
            </form>
        </div>
    </div>
</body>

</html>
